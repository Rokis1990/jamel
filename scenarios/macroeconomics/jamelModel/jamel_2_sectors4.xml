<?xml version="1.0" encoding="UTF-8"?>

<circuit
	type="jamel.basic.BasicCircuit"
	date="06-01-2016"
	title="Jamel With Two Industrial Sectors"
	content="Nouvel essai de modèle à 2 secteurs : biens d'équipement + biens de consommation"
>

	<settings
		randomSeed="0"
		chartsConfigFile="config/panels2.xml" />

	<sectors>

		<Households
			type="jamel.jamel.households.HouseholdSector2"
			agent="jamel.jamel.households.BasicHousehold"
		>
			<settings
				savings.propensityToSave="0.25"
				savings.ratioTarget="0.25"
				savings.propensityToConsumeExcess="0.5"
				wage.resistance="6"
				wage.flexibility="0.5"
				jobs.selection="10"
				supplies.selection="10" />
			<dependencies>
				<Suppliers
					value="Industry2"
					good="Consumption Goods" />
				<Employers
					value="Industry1"/>
				<Employers
					value="Industry2"/>
				<Banks value="Banks" />
			</dependencies>
		</Households>

		<Banks type="jamel.jamel.banks.BasicBankingSector">
			<settings
				rate.normal="0.004"
				rate.penalty="0.008"
				capital.targetedRatio="0.1"
				capital.propensityToDistributeExcess="1."
				term.normal="12"
				term.extended="12"
				accommodating="0"
				patience="12" />
			<dependencies>
				<CapitalistSector value="Households" />
			</dependencies>
		</Banks>

		<Industry1
			type="jamel.jamel.firms.IndustrialSector150908"
			agent="jamel.jamel.firms.Firm151225"
		>
			<settings
				mutation.strenght="0.5"
				mutation.probability="0.2"
				animalSpirits="0.2"
				markup.initialValue.min="1"
				markup.initialValue.max="3.5"
				capitalTargetRatio.initialValue.min="0"
				capitalTargetRatio.initialValue.max="1"
				capital.propensityToDistribute="1"
				inventory.normalLevel="4"
				inventory.propensity2sell="0.5"
				sales.capacity="2"
				labourContract.max="36"
				labourContract.min="6"
				price.flexibility="0.02"
				production.capacity="10"
				utilizationRate.flexibility="0.1"
				utilizationRate.initialValue="0.5"
				vacancy.normalRate="0.01"
				wage.initialValue="500"
				wage.flexibility.downward="0.06"
				wage.flexibility.upward="0.06"
				wage.minimum="0"
				regenerationLapse.min="12"
				regenerationLapse.max="24" />

			<dependencies>
				<CapitalistSector value="Households" />
				<Banks value="Banks" />
				<Suppliers
					sector="Industry1"
					supply="Production Goods" />
			</dependencies>

			<technology
				machine.creation.input.type="Production Goods"
				machine.creation.input.volume="1000"
				machine.timelife.mean="120"
				machine.timelife.stDev="15"
				production.productivity="100"
				production.type="Production Goods"
				production.time="2"
			>
				<techCoeficients />
			</technology>
		</Industry1>
		
		<Industry2
			type="jamel.jamel.firms.IndustrialSector150908"
			agent="jamel.jamel.firms.Firm151225"
		>
			<settings
				mutation.strenght="0.5"
				mutation.probability="0.2"
				animalSpirits="0.2"
				markup.initialValue.min="1"
				markup.initialValue.max="3.5"
				capitalTargetRatio.initialValue.min="0"
				capitalTargetRatio.initialValue.max="1"
				capital.propensityToDistribute="1"
				inventory.normalLevel="2"
				inventory.propensity2sell="0.5"
				sales.capacity="2"
				labourContract.max="36"
				labourContract.min="6"
				price.flexibility="0.02"
				production.capacity="20"
				utilizationRate.flexibility="0.1"
				utilizationRate.initialValue="0.5"
				vacancy.normalRate="0.01"
				wage.initialValue="500"
				wage.flexibility.downward="0.06"
				wage.flexibility.upward="0.06"
				wage.minimum="0"
				regenerationLapse.min="12"
				regenerationLapse.max="24" />

			<dependencies>
				<CapitalistSector value="Households" />
				<Banks value="Banks" />
				<Suppliers
					sector="Industry1"
					supply="Production Goods" />
			</dependencies>

			<technology
				machine.creation.input.type="Production Goods"
				machine.creation.input.volume="1000"
				machine.timelife.mean="120"
				machine.timelife.stDev="15"
				production.productivity="100"
				production.type="Consumption Goods"
				production.time="2"
			>
			</technology>
		</Industry2>
	</sectors>

	<phases>
		<Banks action="opening" />
		<Industry1 action="opening" />
		<Industry2 action="opening" />
		<Households action="opening" />
		<Banks action="pay_dividend" />
		<Industry1 action="pay_dividend" />
		<Industry2 action="pay_dividend" />
		<Households action="take_dividends" />
		<Industry1 action="plan_production" />
		<Industry2 action="plan_production" />
		<Households action="job_search" />
		<Industry1 action="production" />
		<Industry2 action="production" />
		<Industry1 action="investment" />
		<Industry2 action="investment" />
		<Industry2 action="inputs_purchase" />
		<Households action="consumption" />
		<Banks action="debt_recovery" />
		<Banks action="closure" />
		<Industry1 action="closure" />
		<Industry2 action="closure" />
		<Households action="closure" />
	</phases>

	<events>

		<pause period="0" />

		<new
			period="0"
			sector="Households"
			size="20000" />

		<new
			period="0"
			sector="Industry1"
			size="200" />

		<new
			period="0"
			sector="Industry2"
			size="800" />

		<pause
			period="2400"
			comment="200 years" />

	</events>

</circuit>
