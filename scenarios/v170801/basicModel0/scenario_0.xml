<?xml version="1.0" encoding="UTF-8"?>

<!-- 25 juillet 2017 -->

<simulation
	name="Simulation 0"
	simulationClassName="jamel.v170801.util.BasicSimulation"
	randomSeed="0"
>

	<gui src="config/panels_0.xml" />

	<sectors defaultClassName="jamel.v170801.util.BasicSector">

		<sector
			name="Banks"
			agentClassName="jamel.v170801.basicModel0.banks.BasicBank"
			initialPopulation="1" />

		<sector
			name="Firms"
			agentClassName="jamel.v170801.basicModel0.firms.BasicFirm"
			initialPopulation="1000" />

		<sector
			name="Workers"
			agentClassName="jamel.v170801.basicModel0.households.BasicWorker"
			initialPopulation="10000"
		>
			<parameters bankSector="Banks">
				<goodMarket
					suppliers="Firms"
					savingPropensity="0"
					search="10" />
				<laborMarket
					employers="Firms"
					flexibility="0"
					resistance="0"
					search="10" />
			</parameters>

		</sector>

		<sector
			name="Shareholders"
			agentClassName="jamel.v170801.basicModel0.households.BasicShareholder"
			initialPopulation="1000"
		>
			<parameters
				bankSector="Banks"
				supplierSector="Firms"
			>
				<goodMarket
					suppliers="Firms"
					savingPropensity="0"
					search="10" />
			</parameters>
		</sector>

	</sectors>

	<phases>

		<phase name="planProduction">
			Firms
		</phase>

		<phase
			name="jobSearch"
		>
			Workers
		</phase>

		<phase name="production">
			Firms
		</phase>

		<phase
			name="consumption"
		>
			Shareholders, Workers
		</phase>

		<phase name="payWages">
			Firms
		</phase>

		<phase name="debtRecovery">
			Banks
		</phase>

		<phase name="payDividends">
			Firms, Banks
		</phase>

	</phases>

	<exports>
		<export>
		</export>
	</exports>

	<events>
		<when t="200">
			<gui.exportCharts to="exports/pdf/">
				<format
					width="800"
					height="300" />
			</gui.exportCharts>
		</when>
		<when t="2400">
			<pause />
		</when>
	</events>

</simulation>