<!-- Test Jamel (v3) -->
<!-- Nelder-Mead simplex on Himmelblau landscape. -->
<!-- 05-06-2015 -->

<circuit type="jamelV3.basic.BasicCircuit">

	<comment>
		A scenario for testing the simplex algorithm of Nelder-Mead 
		on the Himmelblau artificial landscape.
	</comment>

	<settings
		randomSeed="0"
		sleep="100"
		chartsConfigFile="charts.xml" />

	<sectors>

		<Landscape type="jamelV3.optimization.artificialLandscapes.Himmelblau">
			<settings
				top="6"
				bottom="-6"
				left="-6"
				right="6" 
				blockWidth="0.1"
				blockHeight="0.1"
				/>
		</Landscape>

		Definition of several simplexes with different initial positions.

		<Simplex0 type="jamelV3.optimization.nelderMead.Simplex">
			<vertex
				x="-4.1"
				y="5.1" />
			<vertex
				x="-4.1"
				y="5.2" />
			<vertex
				x="-4.0"
				y="5.1" />
			<dependencies>
				<landscape value="Landscape" />
			</dependencies>
		</Simplex0>

		<Simplex1 type="jamelV3.optimization.nelderMead.Simplex">
			<vertex
				x="-2.1"
				y="5.1" />
			<vertex
				x="-2.1"
				y="5.2" />
			<vertex
				x="-2.0"
				y="5.1" />
			<dependencies>
				<landscape value="Landscape" />
			</dependencies>
		</Simplex1>

		<Simplex2 type="jamelV3.optimization.nelderMead.Simplex">
			<vertex
				x="-0.1"
				y="5.1" />
			<vertex
				x="-0.1"
				y="5.2" />
			<vertex
				x="-0.0"
				y="5.1" />
			<dependencies>
				<landscape value="Landscape" />
			</dependencies>
		</Simplex2>

		<Simplex3 type="jamelV3.optimization.nelderMead.Simplex">
			<vertex
				x="1.9"
				y="5.1" />
			<vertex
				x="1.9"
				y="5.2" />
			<vertex
				x="2"
				y="5.1" />
			<dependencies>
				<landscape value="Landscape" />
			</dependencies>
		</Simplex3>

		<Simplex4 type="jamelV3.optimization.nelderMead.Simplex">
			<vertex
				x="3.9"
				y="5.1" />
			<vertex
				x="3.9"
				y="5.2" />
			<vertex
				x="4"
				y="5.1" />
			<dependencies>
				<landscape value="Landscape" />
			</dependencies>
		</Simplex4>

	</sectors>

	<phases>
		<Simplex0 action="move" />
		<Simplex1 action="move" />
		<Simplex2 action="move" />
		<Simplex3 action="move" />
		<Simplex4 action="move" />
	</phases>

	<events>
		<pause period="0" />
		<pause period="100" />
	</events>

</circuit>