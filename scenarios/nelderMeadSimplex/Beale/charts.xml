<?xml version = "1.0" encoding = "UTF-8"?>

<!-- Configuration of the chart panels for the Beale scenario -->
<!-- 06/06/2015 -->

<charts>

	<panel
		title="Main"
		rows="1"
		cols="2">

		<chart
			title="Map"
			options="scatter">
			<series
				sector="Simplex0"
				x="x"
				y="y"
				color="red"
				label="Simplex 0" />
			<series
				sector="Simplex1"
				x="x"
				y="y"
				color="blue"
				label="Simplex 1" />
			<series
				sector="Simplex2"
				x="x"
				y="y"
				color="green"
				label="Simplex 2" />
			<series
				sector="Simplex3"
				x="x"
				y="y"
				color="orange"
				label="Simplex 3" />
			<series
				sector="Simplex4"
				x="x"
				y="y"
				color="cyan"
				label="Simplex 4" />
			<xyBlockSeries
				sector="Landscape"
				x="x"
				y="y"
				z="z"
				lowerBound="0"
				upperBound="500"
				lowerColor="red"
				upperColor="blue"
				blockWidth="0.05"
				blockHeight="0.05" />
			<annotations>
				<Minimum
					x="3"
					y="0.5"
					angle="45" />
			</annotations>
			<yAxis
				min="-5"
				max="5" />
			<xAxis
				min="-5"
				max="5" />
		</chart>

		<chart title="Fitness">
			<series
				value="Simplex0.mean.fitness"
				color="red"
				label="Simplex 0" />
			<series
				value="Simplex1.mean.fitness"
				color="blue"
				label="Simplex 1" />
			<series
				value="Simplex2.mean.fitness"
				color="green"
				label="Simplex 2" />
			<series
				value="Simplex3.mean.fitness"
				color="orange"
				label="Simplex 3" />
			<series
				value="Simplex4.mean.fitness"
				color="cyan"
				label="Simplex 4" />
			<yAxis
				min="0"
				max="50" />
		</chart>
				
	</panel>

</charts>