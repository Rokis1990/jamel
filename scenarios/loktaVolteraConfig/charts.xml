<?xml version = "1.0" encoding = "UTF-8"?>

<!-- Configuration of the chart panels for the Lotka-Volterra scenario -->
<!-- 13/05/2015 -->

<charts>

	<panel
		title="Main"
		rows="1"
		cols="2">

		<chart
			title="Map"
			options="scatter">
			<series
				sector="Preys"
				x="x"
				y="y"
				color="transparentBlue"
				label="Preys" />
			<series
				sector="Predators"
				x="x"
				y="y"
				color="transparentRed"
				label="Predators" />
			<xyBlockSeries
				sector="Grass"
				x="x"
				y="y"
				z="grass"
				lowerColor="red"
				upperColor="green"
				lowerBound="0"
				upperBound="30" />
			<yAxis
				min="0"
				max="200" />
			<xAxis
				min="0"
				max="200" />
		</chart>

		<chart title="Agents">
			<series
				value="Preys.sum.individual"
				label="Preys"
				color="blue" />
			<series
				value="Predators.sum.individual"
				label="Predators"
				color="red" />
		</chart>

	</panel>

</charts>