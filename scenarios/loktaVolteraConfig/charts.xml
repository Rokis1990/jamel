<?xml version = "1.0" encoding = "UTF-8"?>

<!-- Configuration of the chart panels for the Lotka-Volterra scenario -->
<!-- 13/05/2015 -->

<charts>

	<panel
		title="Main"
		rows="1"
		cols="2">

		<chart
			title="Map"
			options="scatter">
			<series
				value="Preys.all.x, Preys.all.y"
				color="transparentBlue"
				label="Preys" />
			<series
				value="Predators.all.x, Predators.all.y"
				color="transparentRed"
				label="Predators" />
			<yAxis
				min="0"
				max="150" />
			<xAxis
				min="0"
				max="150" />
		</chart>

		<chart title="Agents">
			<series
				value="Preys.sum.individual"
				label="Preys"
				color="blue" />
			<series
				value="Predators.sum.individual"
				label="Predators"
				color="red" />
		</chart>

		<chartB title="Energy">
			<series
				value="Grass.sum.grass"
				label="Grass"
				color="green" />
			<series
				value="Preys.sum.energy"
				label="Preys"
				color="blue" />
			<series
				value="Predators.sum.energy"
				label="Predators"
				color="red" />
		</chartB>

	</panel>

</charts>