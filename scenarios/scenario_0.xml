<?xml version="1.0" encoding="UTF-8"?>

<!-- 14 mai 2017 -->

<simulation name="Simulation 0">

	<simulationClassName>
		jamel.util.BasicSimulation
	</simulationClassName>

	<randomSeed>0</randomSeed>

	<gui src="config/panels_0.xml" />

	<sectors>

		<sector name="Banks" className="jamel.util.BasicSector">
			<agentClassName>jamel.basicModel.banks.BasicBank</agentClassName>
			<initialPopulation>1</initialPopulation>
		</sector>

		<sector name="Firms" className="jamel.util.BasicSector">
			<agentClassName>jamel.basicModel.firms.BasicFirm</agentClassName>
			<initialPopulation>1000</initialPopulation>
		</sector>

		<sector name="Workers" className="jamel.util.BasicSector">
			<agentClassName>jamel.basicModel.households.BasicWorker
			</agentClassName>
			<initialPopulation>10000</initialPopulation>
		</sector>

		<sector name="Shareholders" className="jamel.util.BasicSector">
			<agentClassName>jamel.basicModel.households.BasicShareholder
			</agentClassName>
			<initialPopulation>1000</initialPopulation>
		</sector>

	</sectors>

	<phases>

		<phase name="opening">
			<sector>Banks</sector>
			<sector>Workers</sector>
			<sector>Shareholders</sector>
			<sector>Firms</sector>
		</phase>

		<phase name="planProduction">
			<sector>Firms</sector>
		</phase>

		<phase name="jobSearch">
			<shuffle />
			<sector>Workers</sector>
		</phase>

		<phase name="production">
			<sector>Firms</sector>
		</phase>

		<phase name="consumption">
			<sector>Shareholders</sector>
			<sector>Workers</sector>
		</phase>

		<phase name="payWages">
			<sector>Firms</sector>
		</phase>

		<phase name="debtRecovery">
			<sector>Banks</sector>
		</phase>

		<phase name="payDividends">
			<sector>Firms</sector>
			<sector>Banks</sector>
		</phase>

		<phase name="closure">
			<sector>Banks</sector>
			<sector>Workers</sector>
			<sector>Shareholders</sector>
			<sector>Firms</sector>
		</phase>

	</phases>

	<exports>
		<export>
		</export>
	</exports>

	<events>
		<event when="2400">
			<exportCharts recipient="gui">
				export/scenario1/charts/
			</exportCharts>
			<pause />
		</event>
	</events>

</simulation>