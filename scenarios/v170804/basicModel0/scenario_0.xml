<!DOCTYPE simulation [
	<!ENTITY model "jamel.v170804.models.basicModel0"> 
]>

<simulation
	name="Simulation 0"
	simulationClassName="jamel.v170804.util.BasicSimulation"
	randomSeed="0"
>

	<gui
		src="config/panels_0.xml"
		refresh="6" />

	<sectors defaultClassName="jamel.v170804.util.BasicSector">

		<sector
			name="Banks"
			agentClassName="&model;.banks.BasicBank"
			initialPopulation="1" />

		<sector
			name="Firms"
			agentClassName="&model;.firms.BasicFirm"
			initialPopulation="1000" />

		<sector
			name="Workers"
			agentClassName="&model;.households.BasicWorker"
			initialPopulation="10000"
		>
			<parameters bankSector="Banks">
				<goodMarket
					suppliers="Firms"
					savingPropensity="0"
					search="10" />
				<laborMarket
					employers="Firms"
					flexibility="0"
					resistance="0"
					search="10" />
			</parameters>

		</sector>

		<sector
			name="Shareholders"
			agentClassName="&model;.households.BasicShareholder"
			initialPopulation="1000"
		>
			<parameters
				bankSector="Banks"
				supplierSector="Firms"
			>
				<goodMarket
					suppliers="Firms"
					savingPropensity="0"
					search="10" />
			</parameters>
		</sector>

	</sectors>

	<phases>

		<phase name="planProduction">
			Firms
		</phase>

		<phase name="jobSearch">
			Workers
		</phase>

		<phase name="production">
			Firms
		</phase>

		<phase name="consumption">
			Shareholders, Workers
		</phase>

		<phase name="payWages">
			Firms
		</phase>

		<phase name="debtRecovery">
			Banks
		</phase>

		<phase name="payDividends">
			Firms, Banks
		</phase>

	</phases>

	<exports>
		<export>
		</export>
	</exports>

	<events>
		<when t="200">
			<gui.exportCharts to="exports/pdf/">
				<format
					width="800"
					height="300" />
			</gui.exportCharts>
		</when>
		<when t="2400">
			<pause />
		</when>
	</events>

</simulation>