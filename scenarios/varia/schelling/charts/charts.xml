<?xml version = "1.0" encoding = "UTF-8"?>

<charts
	content="Configuration of the chart panels for the Schelling scenario"
	date="21-07-2015"
>

	<panel title="Main">

		<chart
			title="Map"
			type="scatter chart"
			background="lightGray"
		>
			<series
				sector="Schelling"
				x="x"
				y="y"
				z="color"
				xyBlockSeries="true"
				blockWidth="0.6"
				blockHeight="0.6"
				showScale="false"
			>
				<scale
					type="lookupScale"
					lowerBound="1"
					upperBound="3"
					defaultColor="red"
				>
					<entry
						value="1"
						color="white" />
					<entry
						value="2"
						color="black" />
				</scale>
			</series>
			<yAxis
				min="-5"
				max="105" />
			<xAxis
				min="-5"
				max="105" />
		</chart>

		<col />

		<chart
			title="Heterogeneity"
			type="time chart"
		>
			<series
				value="mean(Schelling,heterogeneity,t)"
				color="red"
				label="Heterogeneity" />
			<yAxis
				min="0"
				max="1" />
		</chart>

	</panel>
	<panel title="Info">
		<html source="../../../util/about.xml" />
	</panel>

</charts>