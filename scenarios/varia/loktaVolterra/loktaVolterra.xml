<?xml version = "1.0" encoding = "UTF-8"?>

<circuit
	title="Lokta Voltera Model"
	type="jamel.basic.BasicCircuit"
	content="A toy model to test the Jamel framework."
	date="10-07-2015">

	<settings
		randomSeed="0"
		chartsConfigFile="charts.xml" />

	<sectors>

		<Grass type="jamel.varia.loktaVolterra.Grass">
			<settings
				growth="0.01"
				lim="20"
				width="150"
				height="150" />
		</Grass>

		<Preys type="jamel.varia.loktaVolterra.Preys">
			<settings
				spontaneous="0"
				birthEnergy="5"
				cost="0.1"
				eatVolume="0.5"
				move="0.22"
				reproductionThreshold="10" />
			<dependencies>
				<landSector value="Grass" />
			</dependencies>
		</Preys>

		<Predators type="jamel.varia.loktaVolterra.Predators">
			<settings
				spontaneous="0.0"
				birthEnergy="25"
				cost="0.06"
				eatVolume="0.9"
				move=".55"
				reproductionThreshold="50" />
			<dependencies>
				<landSector value="Grass" />
				<preySector value="Preys" />
			</dependencies>
		</Predators>

	</sectors>

	<phases>
		<Grass action="grow" />
		<Preys action="move" />
		<Predators action="move" />
	</phases>

</circuit>