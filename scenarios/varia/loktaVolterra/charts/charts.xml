<?xml version = "1.0" encoding = "UTF-8"?>

<charts
	content="Configuration of the chart panels for the Lotka-Volterra scenario"
	date="10/07/2015"
>

	<panel title="Main">

		<chart
			title="Map"
			type="scatter chart"
		>
			<series
				sector="Preys"
				x="x"
				y="y"
				color="transparentBlue"
				label="Preys" />
			<series
				sector="Predators"
				x="x"
				y="y"
				color="transparentRed"
				label="Predators" />
			<series
				xyBlockSeries="true"
				sector="Grass"
				x="x"
				y="y"
				z="grass"
			>
				<scale
					type="colorScale"
					lowerBound="0"
					upperBound="30"
					lowerColor="red"
					upperColor="green" />
			</series>
			<yAxis
				min="0"
				max="150" />
			<xAxis
				min="0"
				max="150" />
		</chart>

		<col />

		<chart type="time chart">
			<subplot>
				<series
					value="sum(Preys,individual,t)"
					color="blue" />
				<series
					value="sum(Predators,individual,t)"
					color="red" />
				<yAxis label="Agents" />
			</subplot>

			<subplot>
				<series
					value="sum(Grass,grass,t)"
					color="green" />
				<series
					value="sum(Preys,energy,t)"
					color="blue" />
				<series
					value="sum(Predators,energy,t)"
					color="red" />
				<yAxis label="Energy" />
			</subplot>

			<legend>
				<item
					tooltip="sum(Grass,grass,t)"
					label="Grass"
					color="green" />
				<item
					tooltip="sum(Preys,energy,t)"
					label="Preys"
					color="blue" />
				<item
					tooltip="sum(Predators,energy,t)"
					label="Predators"
					color="red" />
			</legend>
		</chart>


	</panel>

	<panel title="Info">
		<html source="../../../util/about.xml" />
	</panel>

</charts>