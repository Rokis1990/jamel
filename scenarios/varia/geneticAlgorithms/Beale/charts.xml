<?xml version = "1.0" encoding = "UTF-8"?>

<charts
	content="Configuration of the chart panels for the Beale scenario"
	date="16-07-2015">

	<panel title="Main">

		<chart
			title="Landscape"
			type="scatter chart">
			<series
				sector="Algo0"
				x="x"
				y="y"
				color="red"
				label="Algo 0" />
			<series
				sector="Algo1"
				x="x"
				y="y"
				color="blue"
				label="Algo 1" />
			<series
				sector="Algo2"
				x="x"
				y="y"
				color="green"
				label="Algo 2" />
			<series
				xyBlockSeries="true"
				sector="Landscape"
				x="x"
				y="y"
				z="z"
				blockWidth="0.05"
				blockHeight="0.05">
				<scale
					type="colorScale"
					lowerBound="0"
					upperBound="500"
					lowerColor="red"
					upperColor="blue" />
			</series>
			<annotations>
				<Minimum
					x="3"
					y="0.5"
					angle="45" />
			</annotations>
			<yAxis
				min="-5"
				max="5" />
			<xAxis
				min="-5"
				max="5" />
		</chart>

		<chart
			title="Fitness"
			type="time chart">
			<series
				value="mean(Algo0,fitness,t)"
				color="red"
				label="Algo 0" />
			<series
				value="mean(Algo1,fitness,t)"
				color="blue"
				label="Algo 1" />
			<series
				value="mean(Algo2,fitness,t)"
				color="green"
				label="Algo 2" />
			<subplot>
				<yAxis
					min="1"
					max="1000" />
			</subplot>

			<subplot>
				<yAxis
					min="0.001"
					max="1" />
			</subplot>

			<subplot>
				<yAxis
					min="0"
					max="0.001" />
			</subplot>

		</chart>

	</panel>

</charts>