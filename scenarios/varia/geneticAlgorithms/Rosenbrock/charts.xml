<?xml version = "1.0" encoding = "UTF-8"?>

<charts
	content="Configuration of the chart panels for the Rosenbrock scenario"
	date="16-07-2015"
>

	<panel title="Main">

		<chart
			title="Landscape"
			type="scatter chart"
		>
			<series
				sector="Algo0"
				x="x"
				y="y"
				color="red"
				label="Algo 0" />
			<series
				sector="Algo1"
				x="x"
				y="y"
				color="blue"
				label="Algo 1" />
			<series
				sector="Algo2"
				x="x"
				y="y"
				color="green"
				label="Algo 2" />
			<series
				xyBlockSeries="true"
				sector="Landscape"
				x="x"
				y="y"
				z="z"
				blockWidth="0.05"
				blockHeight="0.05"
			>
				<scale
					type="colorScale"
					lowerBound="0"
					upperBound="500"
					lowerColor="red"
					upperColor="blue" />
			</series>
			<annotations>
				<Minimum
					x="1"
					y="1"
					angle="45" />
			</annotations>
			<yAxis
				min="-3"
				max="3" />
			<xAxis
				min="-3"
				max="3" />
		</chart>

		<col />

		<chart
			title="Fitness"
			type="time chart"
		>
			<series
				value="mean(Algo0,fitness,t)"
				color="red"
				label="Algo 0" />
			<series
				value="mean(Algo1,fitness,t)"
				color="blue"
				label="Algo 1" />
			<series
				value="mean(Algo2,fitness,t)"
				color="green"
				label="Algo 2" />
			<subplot>
				<yAxis
					min="5"
					max="5000" />
			</subplot>
			<subplot>
				<yAxis
					min="0.05"
					max="5" />
			</subplot>
			<subplot>
				<yAxis
					min="0"
					max="0.05" />
			</subplot>
		</chart>

	</panel>

	<panel title="Info">
		<html source="../../../util/about.xml" />
	</panel>


</charts>