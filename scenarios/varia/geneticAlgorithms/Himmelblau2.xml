<!-- Test Jamel (v3) -->
<!-- Genetic Algorithm on Himmelblau landscape. -->
<!-- 08-06-2015 -->

<circuit type="jamel.basic.BasicCircuit">

	<comment>
		A scenario for testing a genetic algorithm
		on the Himmelblau
		artificial landscape.
	</comment>

	<settings
		randomSeed="0"
		sleep="100"
		chartsConfigFile="Himmelblau/charts.xml" />

	<sectors>

		<Landscape type="jamel.varia.optimization.artificialLandscapes.Himmelblau">
			<settings
				top="6"
				bottom="-6"
				left="-6"
				right="6"
				blockWidth="0.1"
				blockHeight="0.1" />
		</Landscape>

		<Algo0
			type="jamel.varia.optimization.genetic.BasicGA"
			agentType="jamel.varia.optimization.genetic.BasicIndividual"
		>
			<settings
				nAgents="100"
				top="-1"
				bottom="-1.5"
				left="-0.5"
				right="0"
				curiosity="5"
				tournamentSize="10" />
			<dependencies>
				<landscape value="Landscape" />
			</dependencies>
		</Algo0>

		<Algo1
			type="jamel.varia.optimization.genetic.BasicGA"
			agentType="jamel.varia.optimization.genetic.SatisficingIndividual"
		>
			<settings
				nAgents="100"
				top="-1"
				bottom="-1.5"
				left="-0.5"
				right="0"
				curiosity="5"
				tournamentSize="10" />
			<dependencies>
				<landscape value="Landscape" />
			</dependencies>
		</Algo1>

		<Algo2
			type="jamel.varia.optimization.genetic.BasicGA"
			agentType="jamel.varia.optimization.genetic.PyramidingIndiv"
		>
			<settings
				nAgents="100"
				top="-1"
				bottom="-1.5"
				left="-0.5"
				right="0"
				curiosity="5"
				tournamentSize="10" />
			<dependencies>
				<landscape value="Landscape" />
			</dependencies>
		</Algo2>

	</sectors>

	<phases>
		<Algo0 action="tournament" />
		<Algo1 action="tournament" />
		<Algo2 action="tournament" />
		<Algo0 action="adaptation" />
		<Algo1 action="adaptation" />
		<Algo2 action="adaptation" />
	</phases>

	<events>
		<pause period="0" />
		<pause period="200" />
	</events>

</circuit>