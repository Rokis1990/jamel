<!-- Test Jamel (v3) -->
<!-- Nelder-Mead simplex on Rosenbrock landscape. -->
<!-- 05-06-2015 -->

<circuit type="jamelV3.basic.BasicCircuit">

	<comment>
		A scenario for testing the simplex algorithm of Nelder-Mead 
		on the Rosenbrock artificial landscape.
	</comment>

	<settings
		randomSeed="0"
		sleep="100"
		chartsConfigFile="charts.xml" />

	<sectors>

		<Landscape type="jamelV3.varia.optimization.artificialLandscapes.Rosenbrock">
			<settings
				top="3"
				bottom="-3"
				left="-3"
				right="3" 
				blockWidth="0.05"
				blockHeight="0.05"				
				/>
		</Landscape>

		<Simplex0 type="jamelV3.varia.optimization.nelderMead.Simplex">
			<vertex
				x="-2.1"
				y="2.1" />
			<vertex
				x="-2.1"
				y="2.2" />
			<vertex
				x="-2.0"
				y="2.1" />
			<dependencies>
				<landscape value="Landscape" />
			</dependencies>
		</Simplex0>

		<Simplex1 type="jamelV3.varia.optimization.nelderMead.Simplex">
			<vertex
				x="-1.1"
				y="2.1" />
			<vertex
				x="-1.1"
				y="2.2" />
			<vertex
				x="-1.0"
				y="2.1" />
			<dependencies>
				<landscape value="Landscape" />
			</dependencies>
		</Simplex1>

		<Simplex2 type="jamelV3.varia.optimization.nelderMead.Simplex">
			<vertex
				x="-0.1"
				y="2.1" />
			<vertex
				x="-0.1"
				y="2.2" />
			<vertex
				x="-0.0"
				y="2.1" />
			<dependencies>
				<landscape value="Landscape" />
			</dependencies>
		</Simplex2>

		<Simplex3 type="jamelV3.varia.optimization.nelderMead.Simplex">
			<vertex
				x="0.9"
				y="2.1" />
			<vertex
				x="0.9"
				y="2.2" />
			<vertex
				x="1"
				y="2.1" />
			<dependencies>
				<landscape value="Landscape" />
			</dependencies>
		</Simplex3>

		<Simplex4 type="jamelV3.varia.optimization.nelderMead.Simplex">
			<vertex
				x="1.9"
				y="2.1" />
			<vertex
				x="1.9"
				y="2.2" />
			<vertex
				x="2"
				y="2.1" />
			<dependencies>
				<landscape value="Landscape" />
			</dependencies>
		</Simplex4>

	</sectors>

	<phases>
		<Simplex0 action="move" />
		<Simplex1 action="move" />
		<Simplex2 action="move" />
		<Simplex3 action="move" />
		<Simplex4 action="move" />
	</phases>

	<events>
		<pause period="0" />
		<pause period="400" />
	</events>

</circuit>