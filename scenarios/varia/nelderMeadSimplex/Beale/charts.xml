<?xml version = "1.0" encoding = "UTF-8"?>

<charts
	content="Configuration of the chart panels for the Beale scenario"
	date="21-07-2015"
>

	<panel title="Main">

		<chart
			title="Landscape"
			type="scatter chart"
		>
			<series
				sector="Simplex0"
				x="x"
				y="y"
				color="red"
				label="Simplex 0" />
			<series
				sector="Simplex1"
				x="x"
				y="y"
				color="blue"
				label="Simplex 1" />
			<series
				sector="Simplex2"
				x="x"
				y="y"
				color="green"
				label="Simplex 2" />
			<series
				sector="Simplex3"
				x="x"
				y="y"
				color="orange"
				label="Simplex 3" />
			<series
				sector="Simplex4"
				x="x"
				y="y"
				color="cyan"
				label="Simplex 4" />
			<series
				xyBlockSeries="true"
				sector="Landscape"
				x="x"
				y="y"
				z="z"
				blockWidth="0.05"
				blockHeight="0.05"
			>
				<scale
					type="colorScale"
					lowerBound="0"
					upperBound="500"
					lowerColor="red"
					upperColor="blue" />
			</series>

			<annotations>
				<Minimum
					x="3"
					y="0.5"
					angle="45" />
			</annotations>
			<yAxis
				min="-5"
				max="5" />
			<xAxis
				min="-5"
				max="5" />
		</chart>

		<col />

		<chart
			title="Fitness"
			type="time chart"
		>
			<series
				value="mean(Simplex0,fitness,t)"
				color="red"
				label="Simplex 0" />
			<series
				value="mean(Simplex1,fitness,t)"
				color="blue"
				label="Simplex 1" />
			<series
				value="mean(Simplex2,fitness,t)"
				color="green"
				label="Simplex 2" />
			<series
				value="mean(Simplex3,fitness,t)"
				color="orange"
				label="Simplex 3" />
			<series
				value="mean(Simplex4,fitness,t)"
				color="cyan"
				label="Simplex 4" />
			<yAxis
				min="0"
				max="100"
				logarithmic="true" />
		</chart>

	</panel>

	<panel title="Info">
		<html source="../../../util/about.xml" />
	</panel>


</charts>